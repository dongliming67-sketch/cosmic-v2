# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# 或使用其他兼容的API服务

# DeepSeek
# OPENAI_BASE_URL=https://api.deepseek.com/v1
# OPENAI_API_KEY=your_deepseek_api_key
# OPENAI_MODEL=deepseek-chat

# Groq (推荐：速度快，支持多种开源模型)
# OPENAI_BASE_URL=https://api.groq.com/openai/v1
# OPENAI_API_KEY=your_groq_api_key_here
# OPENAI_MODEL=llama-3.3-70b-versatile

# ========== OpenRouter配置（推荐：可调用Gemini等多种模型）==========
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# 备选模型列表（当主模型速率限制时自动切换，用逗号分隔）
# 系统会按顺序尝试这些模型，直到找到可用的
OPENROUTER_FALLBACK_MODELS=meta-llama/llama-3.2-3b-instruct:free,mistralai/mistral-7b-instruct:free,google/gemma-2-9b-it:free

# 可选的免费模型:
# - google/gemini-2.0-flash-exp:free (免费，推荐，但有速率限制)
# - meta-llama/llama-3.2-3b-instruct:free (免费，轻量级，速度快)
# - mistralai/mistral-7b-instruct:free (免费，质量不错)
# - google/gemma-2-9b-it:free (免费，谷歌模型)
# 付费模型:
# - google/gemini-pro (需付费)
# - anthropic/claude-3-haiku (需付费)
# - meta-llama/llama-3.1-70b-instruct (需付费)

# Groq API配置（用于三层分析框架模式）
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# 智谱AI配置（专用配置，优先级高于OPENAI配置）
ZHIPU_API_KEY=your_zhipu_api_key_here
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4
ZHIPU_MODEL=glm-4-flash

# 或者通过OpenAI兼容方式使用智谱AI
# OPENAI_BASE_URL=https://open.bigmodel.cn/api/paas/v4
# OPENAI_API_KEY=your_zhipu_api_key
# OPENAI_MODEL=glm-4-flash

# ========== 三层分析框架提供商选择 ==========
# 可选值: 'openrouter' | 'groq' | 'zhipu' | 'auto'
# - 'openrouter': 强制使用OpenRouter（可调用Gemini 2.0 Flash等）
# - 'groq': 强制使用Groq
# - 'zhipu': 强制使用智谱AI
# - 'auto': 自动选择（优先OpenRouter，其次Groq，最后智谱）
THREE_LAYER_PROVIDER=zhipu

# 服务器端口
PORT=3001
